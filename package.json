{
  "name": "mcp-screenshot",
  "displayName": "MCP ACS Screenshot",
  "description": "Cross-platform screenshot capture for VS Code with MCP integration and Language Server Protocol support for intelligent code assistance. Part of the Digital Defiance AI Capabilities Suite.",
  "version": "1.5.28",
  "publisher": "DigitalDefiance",
  "packageManager": "yarn@4.12.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Testing"
  ],
  "keywords": [
    "screenshot",
    "capture",
    "mcp",
    "mcp-server",
    "image",
    "annotation",
    "ai-debugging",
    "copilot",
    "pii-masking",
    "privacy"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "mcp-screenshot.participant",
        "name": "screenshot",
        "description": "MCP ACS Screenshot - Cross-platform screenshot capture with PII masking",
        "isSticky": true
      }
    ],
    "languageModelTools": [
      {
        "name": "screenshot_capture_full",
        "displayName": "Capture Full Screen",
        "modelDescription": "Capture full screen screenshot",
        "toolReferenceName": "captureFullScreen",
        "canBeReferencedInPrompt": true,
        "tags": [
          "screenshot",
          "mcp"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "enum": [
                "png",
                "jpeg",
                "webp",
                "bmp"
              ],
              "description": "Image format"
            },
            "quality": {
              "type": "number",
              "minimum": 1,
              "maximum": 100,
              "description": "Quality for lossy formats"
            },
            "savePath": {
              "type": "string",
              "description": "File path to save screenshot (optional, returns base64 if not provided)"
            }
          }
        }
      },
      {
        "name": "screenshot_capture_window",
        "displayName": "Capture Window",
        "modelDescription": "Capture specific window screenshot",
        "toolReferenceName": "captureWindow",
        "canBeReferencedInPrompt": true,
        "tags": [
          "screenshot",
          "mcp"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {
            "windowTitle": {
              "type": "string",
              "description": "Window title to capture"
            },
            "format": {
              "type": "string",
              "enum": [
                "png",
                "jpeg",
                "webp",
                "bmp"
              ],
              "description": "Image format"
            },
            "quality": {
              "type": "number",
              "minimum": 1,
              "maximum": 100,
              "description": "Quality for lossy formats"
            },
            "savePath": {
              "type": "string",
              "description": "File path to save screenshot (optional, returns base64 if not provided)"
            }
          }
        }
      },
      {
        "name": "screenshot_capture_region",
        "displayName": "Capture Region",
        "modelDescription": "Capture a rectangular region of the screen",
        "toolReferenceName": "captureRegion",
        "canBeReferencedInPrompt": true,
        "tags": [
          "screenshot",
          "mcp"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number",
              "description": "X coordinate"
            },
            "y": {
              "type": "number",
              "description": "Y coordinate"
            },
            "width": {
              "type": "number",
              "description": "Width"
            },
            "height": {
              "type": "number",
              "description": "Height"
            },
            "format": {
              "type": "string",
              "enum": [
                "png",
                "jpeg",
                "webp",
                "bmp"
              ],
              "description": "Image format"
            },
            "quality": {
              "type": "number",
              "minimum": 1,
              "maximum": 100,
              "description": "Quality for lossy formats"
            },
            "savePath": {
              "type": "string",
              "description": "File path to save screenshot (optional, returns base64 if not provided)"
            }
          },
          "required": [
            "x",
            "y",
            "width",
            "height"
          ]
        }
      },
      {
        "name": "screenshot_list_displays",
        "displayName": "List Displays",
        "modelDescription": "List all connected displays",
        "toolReferenceName": "listDisplays",
        "canBeReferencedInPrompt": true,
        "tags": [
          "screenshot",
          "mcp"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "screenshot_list_windows",
        "displayName": "List Windows",
        "modelDescription": "List all visible windows",
        "toolReferenceName": "listWindows",
        "canBeReferencedInPrompt": true,
        "tags": [
          "screenshot",
          "mcp"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      }
    ],
    "commands": [
      {
        "command": "mcp-screenshot.captureFullScreen",
        "title": "MCP ACS Screenshot: Capture Full Screen",
        "icon": "$(device-camera)"
      },
      {
        "command": "mcp-screenshot.captureWindow",
        "title": "MCP ACS Screenshot: Capture Window",
        "icon": "$(window)"
      },
      {
        "command": "mcp-screenshot.captureRegion",
        "title": "MCP ACS Screenshot: Capture Region",
        "icon": "$(selection)"
      },
      {
        "command": "mcp-screenshot.listDisplays",
        "title": "MCP ACS Screenshot: List Displays"
      },
      {
        "command": "mcp-screenshot.listWindows",
        "title": "MCP ACS Screenshot: List Windows"
      },
      {
        "command": "mcp-screenshot.openSettings",
        "title": "MCP ACS Screenshot: Open Settings"
      },
      {
        "command": "mcp.screenshot.capture",
        "title": "MCP ACS Screenshot: Capture (LSP)"
      },
      {
        "command": "mcp.screenshot.getCapabilities",
        "title": "MCP ACS Screenshot: Get Capabilities (LSP)"
      }
    ],
    "configuration": {
      "title": "MCP ACS Screenshot",
      "properties": {
        "mcpScreenshot.defaultFormat": {
          "type": "string",
          "enum": [
            "png",
            "jpeg",
            "webp",
            "bmp"
          ],
          "default": "png",
          "description": "Default image format for screenshots"
        },
        "mcpScreenshot.defaultQuality": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 90,
          "description": "Default quality for lossy formats (1-100)"
        },
        "mcpScreenshot.saveDirectory": {
          "type": "string",
          "default": "${workspaceFolder}/screenshots",
          "description": "Default directory for saving screenshots"
        },
        "mcpScreenshot.enablePIIMasking": {
          "type": "boolean",
          "default": false,
          "description": "Enable PII detection and masking by default"
        },
        "mcpScreenshot.serverCommand": {
          "type": "string",
          "default": "npx",
          "description": "Command to run MCP screenshot server"
        },
        "mcpScreenshot.serverArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "-y",
            "@ai-capabilities-suite/mcp-screenshot"
          ],
          "description": "Arguments for MCP screenshot server command"
        },
        "mcpScreenshot.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save screenshots to disk"
        },
        "mcpScreenshot.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start MCP server when VS Code opens"
        },
        "mcpScreenshot.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for screenshot operations"
        }
      }
    },
    "walkthroughs": [
      {
        "id": "mcp-screenshot.walkthrough",
        "title": "Get Started with MCP ACS Screenshot",
        "description": "Learn how to capture screenshots with AI assistance",
        "steps": [
          {
            "id": "install",
            "title": "Extension Installed",
            "description": "MCP ACS Screenshot is now active.\n[Open Settings](command:workbench.action.openSettings?%5B%22mcpScreenshot%22%5D)",
            "media": {
              "markdown": "README.md"
            }
          },
          {
            "id": "copilot",
            "title": "Use with Copilot",
            "description": "Ask Copilot to capture screenshots:\n- `@screenshot capture full screen`\n- `@screenshot list windows`\n[Try it now](command:workbench.action.chat.open)",
            "media": {
              "markdown": "README.md"
            }
          }
        ]
      }
    ],
    "keybindings": [
      {
        "command": "mcp-screenshot.captureFullScreen",
        "key": "ctrl+shift+s ctrl+shift+f",
        "mac": "cmd+shift+s cmd+shift+f"
      },
      {
        "command": "mcp-screenshot.captureWindow",
        "key": "ctrl+shift+s ctrl+shift+w",
        "mac": "cmd+shift+s cmd+shift+w"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mcp-screenshot.captureFullScreen"
        },
        {
          "command": "mcp-screenshot.captureWindow"
        },
        {
          "command": "mcp-screenshot.captureRegion"
        },
        {
          "command": "mcp-screenshot.listDisplays"
        },
        {
          "command": "mcp-screenshot.listWindows"
        },
        {
          "command": "mcp-screenshot.openSettings"
        },
        {
          "command": "mcp.screenshot.capture"
        },
        {
          "command": "mcp.screenshot.getCapabilities"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "vsce:login": "vsce login DigitalDefiance",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "fast-check": "^3.15.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@ai-capabilities-suite/mcp-client-base": "1.0.1",
    "@ai-capabilities-suite/mcp-screenshot": "^1.5.23",
    "@ai-capabilities-suite/vscode-shared-status-bar": "^1.0.21",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "vscode-languageclient": "^10.0.0-next.15",
    "vscode-languageserver": "^10.0.0-next.15",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digital-defiance/ai-capabilities-suite.git",
    "directory": "packages/vscode-mcp-screenshot"
  },
  "bugs": {
    "url": "https://github.com/digital-defiance/ai-capabilities-suite/issues"
  },
  "homepage": "https://github.com/digital-defiance/ai-capabilities-suite/tree/main/packages/vscode-mcp-screenshot",
  "license": "MIT",
  "author": {
    "name": "Digital Defiance",
    "email": "info@digitaldefiance.org"
  }
}
